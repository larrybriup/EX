<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
           http://www.springframework.org/schema/context
           http://www.springframework.org/schema/context/spring-context-3.2.xsd"
          >
	<bean name="date" class="spring.ex.eagle1.bean.DateBean">
		<!-- 使用类型注入
		<constructor-arg type="int" value="17"></constructor-arg>
		<constructor-arg type="int" value="07"></constructor-arg>
		<constructor-arg type="int" value="55"></constructor-arg>
		
		自动注入
		 <constructor-arg  value="18"></constructor-arg>
		 <constructor-arg  value="12"></constructor-arg>
		 <constructor-arg value="45"></constructor-arg>
		 -->
		 <!-- 使用参数的索引注入 -->
		 <constructor-arg index="0" value="18"></constructor-arg>
		 <constructor-arg index="1" value="12"></constructor-arg>
		 <constructor-arg index="2" value="45"></constructor-arg>
	</bean>
</beans>
           